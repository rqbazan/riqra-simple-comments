{
  "name": "simple-coments-server",
  "version": "1.0.0",
  "main": "index.js",
  "author": "rqbazan <raquirozbazan@gmail.com>",
  "license": "MIT",
  "scripts": {
    "watch-server": "babel server --out-dir build --source-maps --watch",
    "build-server": "babel server --out-dir build --source-maps",
    "watch-client": "npm run-script watch --prefix client",
    "build-client": "npm run-script build --prefix client",
    "build": "yarn build-server & yarn build-client",
    "start-dev": "cross-env NODE_ENV=dev PORT=3000 nodemon ./build/index.js",
    "start-prod": "cross-env NODE_ENV=prod PORT=8080 nodemon ./build/index.js",
    "server-dev": "concurrently --kill-others \"yarn watch-server\" \"yarn start-dev\"",
    "server-prod": "yarn build-client & yarn build-server & yarn start-prod"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "express-graphql": "^0.6.11",
    "graphql": "0.11.0",
    "graphql-relay": "^0.5.4",
    "mysql2": "^1.5.1",
    "sequelize": "^4.32.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-3": "^6.24.1",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.3",
    "nodemon": "^1.14.11"
  }
}
